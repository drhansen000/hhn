<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/text_color_primary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material</item>
    </style>

    <style name="AppTheme." parent="AppTheme" >
        <item name="android:textColorPrimary">@color/text_color_primary</item>
        <item name="android:colorBackground">@android:color/background_dark</item>
    </style>

</resources>
